<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaBlurryBorders.MainWindow"
        Title="AvaloniaBlurryBorders">
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Height="42" Orientation="Horizontal">
                <TextBlock>TITLE1</TextBlock>
            </StackPanel>
            <StackPanel DockPanel.Dock="Top" Height="1" Background="LightGray" Orientation="Horizontal"/>
            <Border CornerRadius="4" BorderBrush="LightGray" BorderThickness="1" Margin="25">
                <DockPanel>
                    <Panel Background="White" />
                </DockPanel>
            </Border>
        </DockPanel>
</Window>
